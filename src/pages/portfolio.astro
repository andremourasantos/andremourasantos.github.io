---
import DefaultLayout from '../layouts/Default.astro';
import HeroSection from '../components/HeroSection.astro';
import ContentHolder from '../components/ContentHolder.astro';
import Quote from '../components/Quote.astro';
import SiteSection from '../components/SiteSection.astro';
import Button from '../components/Button.astro';
---

<DefaultLayout title='Portfólio' description='Ideias e projetos que você pode usar de inspiração ou adaptar para utilizar na sua operação: Sinta-se à vontade para conferir os projetos e saiba que estão todos sob licença MIT.' pageType="webiste" imageName="portfolio">
  <HeroSection heroTitle='Portfólio' heroSubtitle='Ideias e projetos que você pode usar de inspiração ou adaptar para utilizar na sua operação.' heroBtnIcon="ChevronDown"/>

  <ContentHolder id=content orientation=column>
    <Quote quoteText='Tive o privilégio de trabalhar ao lado do André e testemunhar sua incrível capacidade de lidar com múltiplas responsabilidades ao mesmo tempo' quoteAuthor='Caroline Cunha' quouteAuthorWork='CS em VEGA I.T'/>

    <SiteSection orientation='RTL' title='Automação' description='Removendo o trabalho repetitivo do dia a dia. Veja como automatizei fluxos de trabalho e utilizei a IA para aumentar a minha produtividade.<br><br>Tire suas ideias do papel com estes estudos de caso ou colete inspirações para sua próxima empreitada.' imageName='alvaro-reyes-qWwpHwip31M-unsplash' imageAltText=''>
      <a href="/portfolio/automacao"><Button btnSize="M" btnType="primary"/></a>
    </SiteSection>

    <SiteSection title='Design' description='Atacando problemas do mundo real com soluções inovadoras de design. Aqui, cada projeto conta uma história, seja de um cliente ou estudo de caso.<br><br>Explore a minha linha de pensamento e veja as propostas para solucionar problemas complexos com facilidade.' imageName='tirza-van-dijk-o1SKqmgSDbg-unsplash' imageAltText=''>
      <a href="/portfolio/design"><Button btnSize="M" btnType="primary"/></a>
    </SiteSection>

    <SiteSection title='Programação' description='Confira soluções que você pode testar agora! Aqui eu apresento ferramentas prontas, criadas para me auxiliar com problemas reais do meu dia a dia.<br><br>Vários dos projetos apresentados também contam com um repositório público no GitHub, para os mais nerds.' imageName='mika-baumeister-J5yoGZLdpSI-unsplash' imageAltText='' orientation="RTL">
      <a href="/portfolio/programacao"><Button btnSize="M" btnType="primary"/></a>
    </SiteSection>
  </ContentHolder>
</DefaultLayout>