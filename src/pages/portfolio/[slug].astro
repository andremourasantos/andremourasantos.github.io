---
import { getCollection, getEntry, render, type CollectionEntry } from "astro:content";
import Article from "../../layouts/Article.astro";

export async function getStaticPaths(): Promise<{ params: { slug: string } }[]> {
  let posts:CollectionEntry<'portfolio'>[];
  if(import.meta.env.ENV){
    posts = await getCollection('portfolio');
  } else {
    posts = await getCollection('portfolio', (post) => {return !post.data.isDraft});
  }

  let urlSlugs = Array.from(posts, (item) => {return item.id});
  
  return urlSlugs.map((id) => {
    return {
      params: {slug: id}
    }
  });
}

const { slug } = Astro.params;

let post = await getEntry('portfolio', slug);
let contentHeaders = await getCollection('portfolio', (data) => {return data.id === slug});

if (!post) {
  return Astro.redirect('/404');
}

const { Content, headings, remarkPluginFrontmatter } = await render(post);
